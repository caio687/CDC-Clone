<% include ../includes/header.ejs %>

    <div>
        <div class ="container min-container">
           <h2 class="basic-title">Listagem de Livros</h2>

           <table class="table table-condensed table-bordered table-striped table-hover">
                <thead>
                    <tr>
                        <td>Titulo</td>
                        <td>Preço</td>
                        <td>Descrição</td>
                    </tr>
                </thead>
                <tbody>
                    <!-- Forma enchuta de fazer o for para percorrer array -->
                    <% for(let produto of produtos) { %>
                        <tr>
                            <td><a><%=produto.titulo%></a></td>
                            <td><%=produto.preco%></td>
                            <td><%=produto.descricao%></td>
                        </tr>
                        <% } %>
                </tbody>
           </table>
          
           
           <a href="/produtos/cadastro" class="btn btn-success"><span class="glyphicon glyphicon-plus-sign"></span> Novo livro</a>
        </div>
    </div>

<% include ../includes/footer.ejs %>